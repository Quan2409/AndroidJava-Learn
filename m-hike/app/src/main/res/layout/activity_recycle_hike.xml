<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="130dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="20dp"
    android:id="@+id/rc_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rc_name_hike"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name Hike"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rc_location_hike"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Location"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/rc_level_hike"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@drawable/custom_border_radius"
            android:backgroundTint="@color/black"
            android:text="Level"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/rc_length_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:text="Length"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/rc_date_hike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/rc_length_hike"
            android:text="Date"
            android:textSize="17dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>