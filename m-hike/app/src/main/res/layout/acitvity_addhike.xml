<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="New Hike"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="114dp"
        tools:ignore="MissingConstraints">
    </TextView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Name of The Hike"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="178dp"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Location"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="246dp"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Date of the Hike"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="317dp"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Length of the Hike"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="387dp"></EditText>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Level of Difficulties:"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="464dp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>