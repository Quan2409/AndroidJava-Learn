<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rc_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/rc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rc_image"
        android:textColor="@color/black"
        android:text="Name:"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/rc_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rc_image"
        android:layout_below="@+id/rc_name"
        android:textColor="@color/black"
        android:text="DOB:"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/rc_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rc_image"
        android:layout_below="@+id/rc_dob"
        android:textColor="@color/black"
        android:text="Email:"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/rc_image"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        />
</RelativeLayout>

